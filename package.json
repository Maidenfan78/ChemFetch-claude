{
  "name": "chemfetch-monorepo",
  "version": "1.0.0",
  "description": "ChemFetch application suite",
  "private": true,
  "scripts": {
    "setup": "node scripts/setup.js",
    "install:all": "npm run install:mobile && npm run install:client && npm run install:backend",
    "install:mobile": "cd chemfetch-mobile-claude && npm install",
    "install:client": "cd chemfetch-client-hub-claude && npm install",
    "install:backend": "cd chemfetch-backend-claude && npm install",
    "lint": "node scripts/lint-all.js",
    "lint:fix": "node scripts/lint-all.js --fix",
    "format": "node scripts/format-all.js",
    "format:check": "node scripts/format-all.js --check",
    "type-check": "node scripts/type-check-all.js",
    "dev:mobile": "cd chemfetch-mobile-claude && npm start",
    "dev:client": "cd chemfetch-client-hub-claude && npm run dev",
    "dev:backend": "cd chemfetch-backend-claude && npm start",
    "build:client": "cd chemfetch-client-hub-claude && npm run build",
    "test": "jest",
    "test:backend": "cd chemfetch-backend-claude && npm test",
    "setup-hooks": "git config core.hooksPath .githooks && chmod +x .githooks/pre-commit"
  },
  "workspaces": [
    "chemfetch-mobile-claude",
    "chemfetch-client-hub-claude",
    "chemfetch-backend-claude"
  ],
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "chalk": "^5.0.0",
    "debug": "^4.4.1",
    "supports-color": "^9.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
